                                <span class="line"></span>
                            </a>
                        </div>

                        <div class="col-10 col-sm-10 col-md-10 col-lg-10">


                            <div class="user">


                                <a type="button" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-2x fa-user"></i>
                                    <span>
                                        Merhaba, @ViewBag.UserName  <br />
                                        @ViewBag.RoleName
                                    </span>
                                </a>


                                <div class="account dropdown-menu dropdown-menu-right">
                                    <div class="account_arrow"></div>
                                    <div class="user-box">
                                        <div class="name">
                                            @ViewBag.UserName <br />
                                            @ViewBag.RoleName
                                        </div>
                                        <div class="image">
                                            <img src="@Url.Content("~/images/user.jpg")" />
                                        </div>
                                    </div>
                                    <div class="link">
                                        <ul>
                                            <li><a href="/Account">Hesabım</a></li>
                                            <li>
                                                <a href="/MessageHistory">
                                                    Mesajlarım @{
