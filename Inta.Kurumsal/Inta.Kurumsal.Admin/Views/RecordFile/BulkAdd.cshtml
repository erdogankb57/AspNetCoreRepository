<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">

            <h5 class="modal-title" id="exampleModalLabel">Toplu Resim Yükleme</h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">
            <div class="popupMessage"></div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="file-input">
                            <div class="file-text"><i class="fas fa-cloud-upload-alt" style="font-size: 48px;"></i><br /><br />Lütfen yükleme yapacağınız resimleri seçiniz yada bu alana sürükleyip bırakınız.</div>
                            <input type="file" name="file" class="file-upload" multiple />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">

                <div class="row">
                    <div class="col-lg-12">
                        <div id="progressbar" start-num="0"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-standart" data-dismiss="modal">Kapat</button>
            <button type="submit" id="btnsubmit" class="btn btn-standart">Kaydet</button>
        </div>
    </div>
</div>
