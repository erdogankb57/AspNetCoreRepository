@model PageTypeDto

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">

            <h5 class="modal-title" id="exampleModalLabel">Sayfa Türü Ekle / Düzenle</h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">
            <div class="popupMessage"></div>
            @Html.HiddenFor(h => h.Id)
            @Html.HiddenFor(h => h.RecordDate)

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Sayfa Türü Kodu</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @required = "required" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Sayfa Türü Adı</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Controller Adı</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.ControllerName, new { @class = "form-control", @required = "required" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Action Adı</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.ActionName, new { @class = "form-control", @required = "required" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">View Adı</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.ViewName, new { @class = "form-control", @required = "required" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Açıklama Girilsin</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsExplanationEnabled, new { @class = "form-check-input" })
                            <label for="IsExplanationEnabled">Evet</label>

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Kısa Açıklama Girilsin</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsShortExplanationEnabled, new { @class = "form-check-input" })
                            <label for="IsShortExplanationEnabled">Evet</label>

                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">İçerik Eklensin mi</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.CanContentBeAdded, new { @class = "form-check-input" })
                            <label for="CanContentBeAdded">Evet</label>

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">İlk Kategori Açılsın</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsMenuFirstCategory, new { @class = "form-check-input" })
                            <label for="IsMenuFirstCategory">Evet</label>

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">İlk Kayıt Açılsın</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsMenuFirstRecord, new { @class = "form-check-input" })
                            <label for="IsMenuFirstRecord">Evet</label>

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Sayfalamayı Etkinleştir</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsPagingEnabled, new { @class = "form-check-input" })
                            <label for="IsPagingEnabled">Evet</label>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-standart" data-dismiss="modal">Kapat</button>
            <button type="submit" id="btnsubmit" class="btn btn-standart">Kaydet</button>
        </div>
    </div>
</div>
