@model ContactInformationDto

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">

            <h5 class="modal-title" id="exampleModalLabel">İletişim Bilgisi Ekle / Düzenle</h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">
            <div class="popupMessage"></div>
            @Html.HiddenFor(h => h.Id)
            @Html.HiddenFor(h => h.RecordDate)
            @Html.HiddenFor(h => h.ImageId)
            @Html.HiddenFor(h => h.LanguageId)


            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Adres Başlık</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })

                    </div>

                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">E-Mail</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Telefon</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @required = "required" })
                    </div>

                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Gsm</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Gsm, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Fax</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Fax, new { @class = "form-control" })
                    </div>

                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Google Map Frame</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.GoogleMapFrame, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Açıklama</label>
                    </div><div class="col-lg-4">
                        @Html.TextAreaFor(m => m.Explanation, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Adres</label>
                    </div><div class="col-lg-4">
                        @Html.TextAreaFor(m => m.Adress, new { @class = "form-control", @required = "required" })
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Google Map Link</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.GoogleMapLink, new { @class = "form-control" })
                    </div>

                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Google Map X</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.GoogleMapX, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Google Map Y</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.GoogleMapY, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Form Mail Gönderen</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.FormSendEmail, new { @class = "form-control" })
                    </div>


                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">QR Kod</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.QrCode, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Sıra Numarası</label>
                    </div><div class="col-lg-4">
                        @Html.TextBoxFor(m => m.OrderNumber, new { @class = "form-control" })
                    </div>

                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Resim</label>
                    </div>
                    <div class="col-lg-4">
                        <input type='file' name='FileImage' class="form-control" />
                    </div>

                    <div class="col-lg-2">
                        <label for="exampleFormControlInput1">Aktif mi</label>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })

                        </div>
                    </div>
                </div>
            </div>

            @if (Model.ImageId != null)
            {

                <div class="form-group image" id="imagePanel">
                    <div class="row">

                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-3">
                            <div class="small-image-content">
                                <a id="ImageLink" href="/upload/Image/@Model.ImageId?width=1000" data-fancybox data-caption="@Model.Name"><img id="Image" src="/upload/Image/@Model.ImageId?width=200" width="100" height="100" style="border:solid 1px #000000" /></a>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <button type="button" id="deleteImage" class="btn btn-standart" banner-id="@Model.Id">Resmi sil</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-standart" data-dismiss="modal">Kapat</button>
            <button type="submit" id="btnsubmit" class="btn btn-standart">Kaydet</button>
        </div>
    </div>
</div>
